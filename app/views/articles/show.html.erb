<div class="main">
  <div class="left">
    <div class="post">
      <h2 class="title">
        <a href="<%= url_for @article %>">
          <%= @article.title %>
        </a>
      </h2>
      <div class="info">
        <div class="date">
          <i class="icon">&#xe600;</i><%= simple_date(@article.created_at) %>
        </div>
        <div class="tag">
          <i class="icon">&#xe602;</i>

          <% @article.tags.split(',').each do |tag| %>
              <span><a href="#">#<%= tag %></a></span>
          <% end %>

        </div>
      </div>
      <div class="post-content markdown-body">
        <%= @article.content.html_safe %>
      </div>
      <% if !preview? %>
          <div class="btn-group">
            <% if admin? %>
                <%= link_to '编辑', edit_article_path(@article), class: 'link-btn' %>
                <%= link_to '删除', article_path(@article), class: 'link-btn', method: :delete, data: {confirm: '确认删除?'} %>
            <% end %>
          </div>
      <% end %>

    </div>
    <div class="comment">

      <!-- 多说评论框 start -->
      <div class="ds-thread" data-thread-key="<%= @article.id %>" data-title="<%= @article.title %>" data-url="<%= url_for @article %>"></div>
      <!-- 多说评论框 end -->
      <!-- 多说公共JS代码 start (一个网页只需插入一次) -->
      <script type="text/javascript">
        var duoshuoQuery = {short_name: "gongweixyz"};
        (function () {
          var ds = document.createElement('script');
          ds.type = 'text/javascript';
          ds.async = true;
          ds.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') + '//static.duoshuo.com/embed.js';
          ds.charset = 'UTF-8';
          (document.getElementsByTagName('head')[0]
          || document.getElementsByTagName('body')[0]).appendChild(ds);
        })();
      </script>
      <!-- 多说公共JS代码 end -->
    </div>
  </div>
  <%= render 'share/side' %>
</div>