<%= render 'share/banner' %>
<div class="main">
  <div class="left">
    <div class="tag-tips">
      <i class="icon">&#xe604</i>
      当前标签:
      <a href="#">#电影</a>
    </div>
    <% @articles.each do |article| %>
        <div class="post">
          <h2 class="title">
            <a href="<%= url_for article %>">
              <%= article.title %>
            </a>
          </h2>
          <div class="info">
            <div class="date">
              <i class="icon">&#xe602;</i><%= simple_date(article.created_at) %>
            </div>
            <div class="tag">
              <i class="icon">&#xe600;</i>
              <% article.tags.split(',').each do |tag| %>
                  <span><a href="#">#<%= tag %></a></span>
              <% end %>
            </div>
          </div>
          <p class="short">
            <a href="<%= url_for article %>">
              <%= simple_content(article.content) %>
            </a>

          </p>
          <div class="btn-group">
            <a href="<%= url_for article %>" class="link-btn">阅读全文</a>
            <a href="<%= url_for article %>" class="link-btn">评论 (5)</a>
          </div>
        </div>
    <% end %>
    <div class="page-group">
      <a href="#" class="link-btn">上一页</a>
      <a href="#" class="link-btn">下一页</a>
    </div>
  </div>
  <%= render 'share/side' %>
</div>
<%= render 'share/ad' %>
