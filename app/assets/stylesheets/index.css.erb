.clearfix:before,
.clearfix:after {
  content: " ";
  display: table;
}

.clearfix:after {
  clear: both;
}

.ml20 {
  margin-left: 20px;
}

.ml10 {
  margin-left: 10px;
}

/**
* 文字溢出显示省略号
* 1. Opera 9-10.6
* 2. Chrome 21+ bug https://bugs.webkit.org/show_bug.cgi?id=121902
*/

.ellipsis {
  white-space: nowrap;
  word-wrap: normal;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  /* 1 */
  text-overflow: ellipsis;
  text-align: left;
  /* 2 */
}

@font-face {
  font-family: 'iconfont';
  src: url('//at.alicdn.com/t/font_1461501993_9387496.eot'); /* IE9*/
  src: url('//at.alicdn.com/t/font_1461501993_9387496.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */ url('//at.alicdn.com/t/font_1461501993_9387496.woff') format('woff'), /* chrome、firefox */ url('//at.alicdn.com/t/font_1461501993_9387496.ttf') format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/ url('//at.alicdn.com/t/font_1461501993_9387496.svg#iconfont') format('svg'); /* iOS 4.1- */
}

.icon {
  font-family: iconfont;
  font-style: normal;
}

body,
h1,
h2,
h3,
ul,
p,
li,
a,
div,
form,
input,
button {
  margin: 0;
  padding: 0;
}

ul {
  list-style: none;
}

button {
  border: none;
}

button:focus {
  box-shadow: none;
}

a {
  text-decoration: none;
  color: #1F1F1A;
}

a:hover {
  color: #1F1F1A;
}

a:active {
  color: #1F1F1A;
}

.link-btn {
  background: #050505;
  height: 20px;
  line-height: 20px;
  font-size: 14px;
  border-radius: 8px;
  padding: 6px 8px;
  color: #FFFFFF;
}

.page-group .link-btn:hover {
  text-decoration: underline;
}

.active-link-btn {
  text-decoration: underline;
}

.link-btn:hover {
  color: #FFFFFF;
}

.search {
  position: relative;
  width: 270px;
  margin-bottom: 30px;
}

.search .search-input {
  font-size: 14px;
  background: #fff;
  padding: 6px 6px 6px 30px;
  width: 186px;
  border: solid 1px #bcbbbb;
  outline: none;
  border-radius: 28px;
  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.9);
  transition: all 0.28s ease-in 0s;
}

.search .search-input:focus {
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.2);
}

.search .icon {
  position: absolute;
  top: 8px;
  left: 10px;
}

body {
  background: #050505 url(<%= asset_path 'w-background.jpg' %>) repeat;
}

.header {
  position: relative;
  width: 1000px;
  height: 120px;
  margin: 0 auto 30px auto;
}

.header .logo {
  display: inline-block;
  font-size: 54px;
  line-height: 120px;
}

.header .nav {
  position: absolute;
  height: 100px;
  margin-top: 20px;
  right: 110px;
  display: inline-block;
}

.header .nav:before,
.header .nav:after {
  content: " ";
  display: table;
}

.header .nav:after {
  clear: both;
}

.header .nav li {
  display: block;
  float: left;
  height: 100px;
  line-height: 100px;
  margin-right: 1px;
}

.header .nav li a {
  padding: 0 20px 0 20px;
  display: inline-block;
  height: 100%;
  font-size: 16px;
  border-radius: 8px;
}

.header .nav li a:hover {
  background: url(<%= asset_path 'b-backgroud.jpg' %>);
  color: #FFFFFF;
}

.header .nav li a.active {
  background: url(<%= asset_path 'b-backgroud.jpg' %>);
  color: #FFFFFF;
}

.banner {
  width: 1000px;
  height: 340px;
  margin: 0 auto;
  background: url(<%= asset_path 'banner-shadow.png' %>) no-repeat left bottom;
}

.banner .content img {
  border-radius: 8px;
}

.main {
  position: relative;
  width: 1000px;
  margin: 30px auto 60px auto;
}

.main:before,
.main:after {
  content: " ";
  display: table;
}

.main:after {
  clear: both;
}

.main .left {
  width: 680px;
  float: left;
}

.main .left .post {
  padding: 50px 50px 30px 50px;
  margin-bottom: 40px;
  background: #ffffff;
  border-radius: 8px;
}

.main .left .post .title {
  font-size: 36px;
  line-height: 36px;
}

.main .left .post .title a {
  color: #222222;
}

.main .left .post .info {
  height: 20px;
  margin: 14px auto 20px auto;
  line-height: 20px;
  font-size: 14px;
}

.main .left .post .info:before,
.main .left .post .info:after {
  content: " ";
  display: table;
}

.main .left .post .info:after {
  clear: both;
}

.main .left .post .info .icon {
  font-size: 16px;
  line-height: 16px;
  margin-right: 4px;
}

.main .left .post .info .date {
  float: left;
  margin-left: 2px;
}

.main .left .post .info .date .icon {
  position: relative;
  top: -2px;
  margin-right: 6px;
}

.main .left .post .info .tag {
  float: right;
}

.main .left .post .info .tag a {
  text-decoration: underline;
}

.main .left .post .short {
  font-size: 14px;
  line-height: 1.8;
}

.main .left .post .btn-group {
  padding: 20px 0 10px 0;
}

.main .left .post .btn-group .link-btn {
  margin-right: 6px;
}

.main .left .page-group .link-btn {
  margin-right: 8px;
  border-radius: 0;
}

.main .tag-tips {
  position: absolute;
  top: -40px;
  left: 0;
}

.main .tag-tips a {
  text-decoration: underline;
}

.right {
  width: 270px;
  float: right;
}

.right .function-block h3 {
  font-size: 20px;
  padding-bottom: 30px;
}

.right .function-block .content {
  font-size: 14px;
  line-height: 1.8;
}

.right .function-block ul {
  width: 270px;
  padding-bottom: 60px;
}

.right .function-block ul li {
  width: 270px;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #E7EBED;
}

.right .tag-nav a {
  margin-right: 4px;
  text-decoration: underline;
}

.right .dote li {
  background: url(<%= asset_path 'arrow.jpg' %>) no-repeat left 50%;
  padding-left: 20px;
}

.footer {
  height: 260px;
  padding: 20px 0 20px 30px;
  background: #050505 url(<%= asset_path 'b-backgroud.jpg' %>);
}

.footer:before,
.footer:after {
  content: " ";
  display: table;
}

.footer:after {
  clear: both;
}

.footer .share-div {
  position: relative;
  display: block;
  float: left;
  height: 214px;
  margin-top: 23px;
  margin-left: 30px;
  border-radius: 8px;
  overflow: hidden;
}

.footer .share-div .cover {
  position: absolute;
  top: -214px;
  height: 214px;
  text-align: center;
  font-size: 30px;
  background: rgba(5, 5, 5, 0.5);
  color: #FFFFFF;
  line-height: 214px;
  transition: all 150ms ease-in-out;
}

.footer .share-div:hover .cover {
  top: 0;
}

.footer .fang {
  width: 390px;
  background: no-repeat url(<%= asset_path 'fang.jpg' %>);
}

.footer .fang .cover {
  width: 390px;
}

.footer .qiao {
  width: 160px;
  background: url(<%= asset_path 'qiao.jpg' %>);
}

.footer .qiao .cover {
  box-sizing: border-box;
  width: 160px;
  font-size: 20px;
  line-height: 1.8;
  padding-top: 60px;
}

.footer .you {
  width: 150px;
  background: url(<%= asset_path 'you.jpg' %>);
}

.footer .you .cover {
  width: 150px;
}

.footer .ted {
  width: 160px;
  background: url(<%= asset_path 'ted.jpg' %>);
}

.footer .ted .cover {
  width: 160px;
}

.footer .ping {
  width: 146px;
  background: url(<%= asset_path 'ping.jpg' %>);
}

.footer .ping .cover {
  width: 146px;
  font-size: 24px;
}

.footer .guai {
  width: 153px;
  background: url(<%= asset_path 'guai.jpg' %>);
}

.footer .guai .cover {
  width: 153px;
}

.post-content {
  line-height: 1.8;
  padding-bottom: 30px;
}

.comment {
  background: #FFFFFF;
  padding: 20px;
}

#login-modal {
  display: none;
  width: 350px;
  height: 180px;
  padding-top: 50px;
  background: #ffffff;
  border-radius: 8px;
}

#login-modal form {
  position: relative;
  left: -30px;
}

.flash-notice {
  position: fixed;
  top: 50px;
  right: 50px;
  min-width: 100px;
  padding: 5px 20px;
  text-align: center;
  background: #1F1F1A;
  color: #ffffff;
  border-radius: 4px;
  opacity: 0.8;
}

.to-top-btn {
  display: none;
  position: fixed;
  cursor: pointer;
  font-size: 50px;
  right: 100px;
  bottom: 100px;
  z-index: 100;
}

.file-up-panel {
  position: absolute;
  right: 0;
  top: 0;
  width: 250px;
  padding: 20px;
  background: #ffffff;
  box-shadow: inset 0 1px 3px #ddd;
  border-radius: 8px;
}

.file-up-panel .upload-result li {
  padding-top: 10px;
  padding-left: 4px;
}

.file-up-panel .upload-result a {
  display: inline-block;
  width: 200px;
  white-space: nowrap;
  word-wrap: normal;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  /* 1 */
  text-overflow: ellipsis;
  text-align: left;
  /* 2 */

}

.file-up-panel .upload-result li i {
  position: relative;
  top: -2px;
  margin-right: 5px;
  cursor: pointer;
}
